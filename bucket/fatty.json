{
  "version": "20210122",
  "description": "Cygwin Terminal emulator with tabs",
  "homepage": "https:github.comjuho-pfatty",
  "license": "GPL-3.0-or-later",
  "notes": "To create a new tab in FaTTY, press Ctrl-Shift-T",
  "depends": "cygwin",
  "architecture": {
    "64bit": {
      "url": "https:raw.githubusercontent.comScoopInstallerBinarymasterfattyfatty-20210122.7z",
      "hash": "f734895ac27ae482b03c5e17c662ba459a1b5906c5f8a062273cf85c48360a1f"
    }
  },
  "pre_install": [
    "$forward_slash_dir = $dir.ToString().replace('\\', '')",
    "Set-Content \"$dir\\fatty.bat\" \"cygwin -c `\"$forward_slash_dirfatty`\" -\" -Encoding ascii | Out-Null"
  ],
  "bin": "fatty.bat",
  "shortcuts": [
    [
      "fatty.bat",
      "FaTTY",
      "",
      "fatty.exe"
    ]
  ]
}