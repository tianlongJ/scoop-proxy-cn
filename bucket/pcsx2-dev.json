    "   }",
    "   if (!(Test-Path \"$persist_dir\\inis\\PCSX2.ini\")) {",
    "       New-item \"$persist_dir\\inis\" -ItemType Directory | Out-Null",
    "       '[AutoUpdater]', 'CheckAtStartup = false' | Set-Content \"$persist_dir\\inis\\PCSX2.ini\"",
    "   }",
    "}"
